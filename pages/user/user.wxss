/* pages/mine/mine.wxss */

.userInfo {
  height: 128rpx;
  display: flex;
  align-items: center;
  justify-content: left; 
  margin: 20rpx 0rpx 20rpx 30rpx;
  width: 700rpx;
}

.userInfo .img {
  width: 128rpx;
  height: 128rpx;
  border-radius: 100%;
}

.userInfo .text {
  border: solid 2rpx #4FC1E9;
  background-color: #4FC1E9;
  border-radius: 10rpx;
}

.userinfo {
    display:flex;
    background: #ffffff;
    width: 100%;
    height: 150rpx;
  }
  
  .userinfo-avatar {
    width: 128rpx;
    height: 128rpx;
    margin: 20rpx;
    border-radius: 100%;
  }
  
  .userinfo-nickname {
    color: black;
  }
  
  .header {
    margin: 90rpx 0 90rpx 50rpx;
    border-bottom: 1px solid #ccc;
    text-align: center;
    width: 650rpx;
    height: 300rpx;
    line-height: 450rpx;
  }
  
  .header image {
    width: 200rpx;
    height: 200rpx;
  }
  
  .content {
    margin-left: 50rpx;
    margin-bottom: 90rpx;
  }
  
  .content text {
    display: block;
    color: #9d9d9d;
    margin-top: 40rpx;
  }
  
  .bottom {
    border-radius: 80rpx;
    margin: 70rpx 50rpx;
    font-size: 35rpx;
  }

  .exitconfirmbutton {
    border-radius: 80rpx;
    margin: 70rpx 50rpx 30rpx 50rpx;
    font-size: 35rpx;
    color: white;
    background-color: red;
  }

  .exitcancelbutton {
    border-radius: 80rpx;
    margin: 30rpx 50rpx 70rpx 50rpx;
    font-size: 35rpx;
    color: white;
    background-color: #09BA07;
  }
  
  /* 用户中心 */
  
  .hr {
    width: 100%;
    height: 15px;
    background-color: #f4f5f6;
  }
  .item {
    display: flex;
    flex-direction: row;
    background-color: white;
  }
  .title {
    padding-top: 15px;
    padding-bottom: 15px;
    padding-left: 15px;
    font-size: 15px;
  }
  
  .detail2 {
    font-size: 15px;
    position: absolute;
    right: 10px;
    height: 50px;
    line-height: 50px;
    color: #888;
  }
  
  .line {
    border: 1px solid #ccc;
    opacity: 0.2;
  }
  
  .backitem{
    background-color: white;
  }

  .feedback{
    background-color: #09BA07;
    color: white;
  }