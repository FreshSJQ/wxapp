
.message{
    margin: 10rpx;
}

.message .nav{
    height: 200rpx;
    margin: 40rpx 15rpx 40rpx 15rpx;
    display: flex;
    border: solid 5rpx #3E91E3;
    border-radius: 10rpx;
}

.message .nav .img{
    width: 260rpx;
    height: 170rpx;
    margin: 20rpx 20rpx 20rpx 5rpx;
    border-radius: 10rpx;
}

.message .nav .linktext{
    width: 430rpx;
    height: 170rpx;
    margin: 5rpx 0 20rpx 5rpx;
}

.message .clicklike{
    display: flex;
    flex-direction: row;
    margin-left: 230rpx;
    position: relative;
    align-items: center;
}


.message .clicklike .right{
    width: 60rpx;
    height: 60rpx;
}

.message .clicklike .heart{
    width: 60rpx;
    height: 60rpx;
    margin-left: 100rpx;
}

.message .buttonmsg{
    color: blue;

}


.input-section {
    position: absolute;
    display: flex;
    align-items: center;
    height: 110rpx;
    bottom: 0rpx;
    left: 0rpx;
    right: 0rpx;
    z-index: 500;
    background: #fff;
}
 
.input_input {
    background: #fff;
    margin-top: 12rpx;
    z-index: 500;
    width: 580rpx;
    height: 110rpx;
    padding-left: 35rpx;
 
}
 
.send_btn {
    width: 110rpx;
    height: 66rpx;
    position: absolute;
    top: 24rpx;
    right: 30rpx;
    background: #09BA07;
    z-index: 550;
    border-radius: 10rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}
 
.send_btn_text {
    display: flex;
    font-size: 32rpx;
    font-family: 'PingFang';
    color: #fff;
    z-index: 560;
}

.message .comment{
    display: flex;
    margin: 50rpx 20rpx;
}

.message .comment .img{
    width: 100rpx;
    height: 100rpx;
    margin: 10rpx;
    border-radius: 100%;
}

.message .comment .content{
    width: 430rpx;
    margin: 20rpx;
    display: block;
    font-size: 30rpx;
}

.message .comment .content .name{
    color: darkgray;
}